  <script>
    function showPage(page) {
      document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
      if (page === 'pagi') {
        document.getElementById('halaman-pagi').classList.add('active');
      } else if (page === 'petang') {
        document.getElementById('halaman-petang').classList.add('active');
      } else {
        document.getElementById('halaman-utama').classList.add('active');
      }
    }
  </script>
